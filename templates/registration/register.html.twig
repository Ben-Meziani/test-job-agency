{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-lg-3"></div>
			<div class="col-lg-6">
				<div id="ui">
					<form class="form-group text-center">
						{{ form_start(registrationForm) }}

						<div class="row">
							<div class="col-lg-6">
								<label>Prénom: *</label>
								{{ form_row(registrationForm.name) }}
							</div>
							<div class="col-lg-6">
								<label>Nom: *</label>
								{{ form_row(registrationForm.lastname) }}
							</div>
						</div>
						<br>
						<label>Email *</label>
						{{ form_row(registrationForm.email) }}
						<br>
						<div class="row">
							<div class="col-lg-12">
								<label>Mot de passe: *</label>
								{{ form_row(registrationForm.plainPassword) }}
							</div>
							<div class="row">
								<div class="col-lg-6">
									<label>Adresse:</label>
									{{ form_row(registrationForm.address) }}
								</div>
								<div class="col-lg-6">
									<label>Code postal:</label>
									{{ form_row(registrationForm.postalCode) }}
								</div>
							</div>
							<label>Téléphone *</label>
							{{ form_row(registrationForm.phone) }}
							<br>
							<label>Pays</label>
							{{ form_row(registrationForm.country) }}
							<br>
							<label>Accepter les CGU *</label>
							{{ form_row(registrationForm.agreeTerms) }}
							<br>
							<button class="btn btn-primary" type="submit">Soumettre</button>

							{{ form_end(registrationForm) }}
                            <p class="mt-3">les champs avec une astérisque (*) sont obligatoire</p>
						</form>
					</div>
				</div>
				<div class="col-lg-3"></div>
			</div>
		</div>

		{# {% for flashError in app.flashes('verify_email_error') %}
					        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
					    {% endfor %}
					        <div class="container">
					
					             <h1>S'inscrire</h1>
					
					    {{ form_start(registrationForm) }}
					        {{ form_row(registrationForm.email) }}
					
					 
					    {{ form_end(registrationForm) }}
					        </div> #}
	{% endblock %}
